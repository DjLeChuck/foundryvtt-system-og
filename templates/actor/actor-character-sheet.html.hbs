<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "OG.Global.Name"}}" />
      </h1>
      <h1 class="charname">
        <input type="text" value="{{characterClass.name}}" readonly disabled
               placeholder="{{localize "OG.Global.CharacterClass"}}" />
      </h1>
      {{#unless characterClass}}
        <button type="button" title="{{localize "OG.CharacterClass.Tooltips.ChooseCharacterClass"}}"
                data-open-compendium data-name="character-classes">
          <i class="far fa-lightbulb"></i>
        </button>
      {{/unless}}

      <div class="resources grid grid-4col">
        <div class="resource flex-group-center">
          <label for="system.attack" class="resource-label">{{localize "OG.Global.Attack"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attack" value="{{system.attack}}" data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.unggghhPoints.value" class="resource-label">{{localize "OG.Global.UnggghhPoints"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" name="system.unggghhPoints.value" value="{{system.unggghhPoints.value}}"
                   data-dtype="Number" />
            <span> / </span>
            <input type="number" value="{{system.unggghhPoints.max}}" disabled readonly />
            {{#unless system.unggghhPoints.max}}
              <button type="button" title="{{localize "OG.CharacterClass.Tooltips.RollUnggghhPoints"}}"
                      data-configuration-roll data-type="unggghhPoints">
                <i class="far fa-lightbulb"></i>
              </button>
            {{/unless}}
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.damage" class="resource-label">{{localize "OG.Global.Damage"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.damage" value="{{system.damage}}" data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.evade" class="resource-label">{{localize "OG.Global.Evade"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.evade" value="{{system.evade}}" data-dtype="Number" />
          </div>
        </div>
      </div>
    </div>
  </header>

  <section class="sheet-body">
    <div class="flexcol">
      <div>
        {{localize "OG.Global.Words"}} ({{actor.countKnownWords}} / {{system.knownWords}})
        {{#unless system.knownWords}}
          <button type="button" title="{{localize "OG.CharacterClass.Tooltips.RollKnownWords"}}"
                  data-configuration-roll data-type="knownWords">
            <i class="far fa-lightbulb"></i>
          </button>
        {{/unless}}

        <button type="button" title="{{localize "OG.CharacterClass.Tooltips.ChooseWords"}}"
                data-open-compendium data-name="words">
          <i class="far fa-lightbulb"></i>
        </button>

        <small>{{localize "OG.CharacterClass.Words.StarMarkExplanations"}}</small>
      </div>

      {{> "systems/og/templates/actor/parts/actor-features.html.hbs" features=words}}

