<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "OG.Global.Name"}}" />
      </h1>
      <h1 class="charname">
        <input name="system.class" type="text" value="{{characterClass.name}}"
               placeholder="{{localize "OG.Global.CharacterClass"}}" />
      </h1>

      <div class="resources grid grid-4col">
        <div class="resource flex-group-center">
          <label for="system.attack" class="resource-label">{{localize "OG.Global.Attack"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attack" value="{{system.attack}}" data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.unggghhPoints.value" class="resource-label">{{localize "OG.Global.UnggghhPoints"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" name="system.unggghhPoints.value" value="{{system.unggghhPoints.value}}"
                   data-dtype="Number" />
            <span> / </span>
            <input type="number" value="{{system.unggghhPoints.max}}" disabled readonly />
            {{#unless system.unggghhPoints.max}}
              <button type="button" title="Roll Unggghh Points!" data-configuration-roll data-type="unggghhPoints">
                <i class="far fa-lightbulb"></i>
              </button>
            {{/unless}}
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.damage" class="resource-label">{{localize "OG.Global.Damage"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.damage" value="{{system.damage}}" data-dtype="Number" />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.evade" class="resource-label">{{localize "OG.Global.Evade"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.evade" value="{{system.evade}}" data-dtype="Number" />
          </div>
        </div>
      </div>
    </div>
  </header>

  <section class="sheet-body">
    <div class="flexcol">
      <div>
        {{localize "OG.Global.Words"}} ({{length words}} / {{system.knownWords}})
        {{#unless system.knownWords}}
          <button type="button" title="Roll known words!" data-configuration-roll data-type="knownWords">
            <i class="far fa-lightbulb"></i>
          </button>
        {{/unless}}
      </div>
      <div class="grid grid-5col">
        {{#each words as |word key|}}
          <div class="flexrow flex-group-center">
            {{word.name}}
          </div>
        {{/each}}
      </div>
    </div>
    <div class="flexcol">
      <div>{{localize "OG.Global.Abilities"}}</div>
      <div class="grid grid-4col">
        {{#each abilities as |ability key|}}
          <div class="flexrow flex-group-center">
            {{ability.name}}
          </div>
        {{/each}}
      </div>
    </div>
  </section>
</form>
