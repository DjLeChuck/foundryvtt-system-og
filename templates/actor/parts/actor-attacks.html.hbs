<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">{{localize "OG.Global.Name"}}</div>
    <div class="item-name">{{localize "OG.Attack.Accuracy"}}</div>
    <div class="item-name">{{localize "OG.Global.Damage"}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="{{localize "OG.Global.Add"}}" data-type="attack">
        <i class="fas fa-plus"></i> {{localize "OG.Global.Add"}}
      </a>
    </div>
  </li>
  {{#each attacks as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a data-roll-attack data-id="{{item._id}}">
            <img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class="item-name">{{item.system.accuracy}}</div>
      <div class="item-name">{{item.system.damage}}</div>
      <div class="item-controls">
        <a class="item-control item-edit" title="{{localize "OG.Global.Edit"}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize "OG.Global.Delete"}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>
