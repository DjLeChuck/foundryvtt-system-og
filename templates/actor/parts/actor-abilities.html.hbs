<div class="grid grid-4col">
  {{#each abilities as |item id|}}
    <div class="item card ability" data-item-id="{{item._id}}">
      <div class="grid grid-3col">
        <h2 class="grid-span-2 flexrow" title="{{item.name}}">
          <div class="name{{ifThen item.system.learned " learned" ""}}">{{item.name}}</div> {{ifThen item.system.free "*" ""}}
        </h2>

        <div>
          {{#if (abilityUsable item)}}
            <button type="button" class="little square roll-btn" data-roll-ability data-id="{{item._id}}">
              <i class="far fa-dice-d6"></i>
            </button>
          {{/if}}
        </div>
      </div>
    </div>
  {{/each}}
</div>
