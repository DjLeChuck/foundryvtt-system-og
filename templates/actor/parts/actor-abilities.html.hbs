<div class="grid grid-3col">
  {{#each abilities as |item id|}}
    <div class="item card ability" data-id="{{item._id}}" data-toggle-container>
      <div class="grid grid-4col flex-items-center">
        <img class="profile-img chattable" src="{{item.img}}" title="{{item.name}}" data-id="{{item._id}}" />
        <h2 class="grid-span-2 flexrow{{#if item.system.description}} toggleable{{/if}}" title="{{item.name}}"
            data-toggle="description">
          <div class="name{{ifThen item.system.learned " learned" ""}}">{{item.name}}</div>
          {{ifThen item.system.free "*" ""}}
        </h2>

        <div>
          {{#if (abilityUsable item)}}
            <button type="button" class="little square" data-roll-ability data-id="{{item._id}}">
              <i class="far fa-dice-d6"></i>
            </button>
          {{/if}}
        </div>
      </div>
      {{#if item.system.description}}
        <div class="hidden" data-toggle-target="description">
          {{{item.system.description}}}
        </div>
      {{/if}}
    </div>
  {{/each}}
</div>
