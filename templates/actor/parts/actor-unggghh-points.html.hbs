<div class="flex-group-center">
  <label for="system.unggghhPoints.value" class="resource-label">{{localize "OG.Global.UnggghhPoints"}}</label>
  <div class="flexrow flex-group-center">
    <div>
      <input type="number" name="system.unggghhPoints.value" value="{{system.unggghhPoints.value}}"
             data-dtype="Number" class="square" />
    </div>
    <span class="flexshrink input-separator"> / </span>
    <div>
      <input type="number" value="{{system.unggghhPoints.max}}" class="square" disabled readonly />
    </div>

    {{#if isCharacter}}
      {{#unless system.unggghhPoints.max}}
        <div>
          <button type="button" title="{{localize "OG.CharacterClass.Tooltips.RollUnggghhPoints"}}"
                  data-configuration-roll data-type="unggghhPoints" class="square pulse u-ml-20">
            <i class="far fa-lightbulb"></i>
          </button>
        </div>
      {{/unless}}
    {{/if}}
  </div>
</div>
