<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">{{localize "OG.Global.Name"}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="{{localize "OG.Global.Add"}}" data-type="word">
        <i class="fas fa-plus"></i> {{localize "OG.Global.Add"}}
      </a>
    </div>
  </li>
  {{#each words as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
        </div>
        <h4>{{item.name}} {{ifThen item.system.common "" "*"}}</h4>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="{{localize "OG.Global.Edit"}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize "OG.Global.Delete"}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>
